name: mirror_sync

on: [push, delete]

jobs:
  codeberg:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4
        with:
          fetch-depth: 0
      - uses: pixta-dev/repository-mirroring-action@v1
        with:
          target_repo_url:
            git@codeberg.org:crnvl96/lazydocker.nvim.git
          ssh_private_key:
            ${{ secrets.CODEBERG_SSH }}
